doctype html
html(lang='en')
  include ../common/head.pug
  +head("Edit Leads")
  body
    header
      include ../common/navbar.pug
      +navbar()
      div.container
          div.row.align-items-center
            div.col-md-6.order-md-1.text-center.text-md-left.pr-md-5
              h1 Edit Lead
              form(action="/lead/" + lead.id + "/edit", method="POST")
                div.input-group.mb-3
                  input(name="lead_email", type="email", placeholder="Enter your email address", value=lead.email).form-control
                  div.input-group-append
                    button(type="submit").btn.btn-primary Save
    include ../common/footer.pug
    +footer()
    script(src='/javascripts/leads.js')
